<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.lazarsazdov.jbplugin</id>
    <name>Auto Code Walker</name>
    <vendor>lucky 3</vendor>
    <depends>com.intellij.modules.java-capable</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Services are registered via @Service annotations in code (Gradle IntelliJ Platform 2.x) -->

        <!-- Tool Window -->
        <toolWindow id="Auto Code Walker"
                    factoryClass="com.hackathon.ui.TourToolWindowFactory"
                    anchor="right"/>

        <!-- Documentation Integration (New API) -->
        <platform.backend.documentation.targetProvider implementation="com.hackathon.doc.TourDocTargetProvider"/>
    </extensions>

    <actions>
        <!-- Editor popup action to add a step -->
        <action id="com.hackathon.actions.AddStepAction"
                class="com.hackathon.actions.AddStepAction"
                text="Add Tour Step"
                description="Add selected code as a tour step">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <!-- Tools menu actions -->
        <action id="com.hackathon.actions.GenerateTourAction"
                class="com.hackathon.actions.GenerateTourAction"
                text="Generate Tour JSON"
                description="Generate JSON tour from collected steps">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <action id="com.hackathon.actions.LoadTourAction"
                class="com.hackathon.actions.LoadTourAction"
                text="Load Tour JSON"
                description="Load a JSON tour and start viewing">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <!-- New flow: Create Tour selection mode and finalize to JSON -->
        <action id="com.hackathon.actions.CreateTourModeAction"
                class="com.hackathon.actions.CreateTourModeAction"
                text="Create Tour (Select Functions)"
                description="Enter selection mode to pick functions/classes for the tour">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action id="com.hackathon.actions.FinalizeTourAction"
                class="com.hackathon.actions.FinalizeTourAction"
                text="Create Tour (Generate JSON)"
                description="Generate a tour.json from selected functions using AI explanations">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <!-- Clear all current selections while in selection mode -->
        <action id="com.hackathon.actions.ClearTourSelectionsAction"
                class="com.hackathon.actions.ClearTourSelectionsAction"
                text="Clear Tour Selections"
                description="Remove all current tour selections">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <!-- Exit Selection Mode -->
        <action id="com.hackathon.actions.ExitSelectionModeAction"
                class="com.hackathon.actions.ExitSelectionModeAction"
                text="Exit Selection Mode"
                description="Exit tour selection mode">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <!-- Start Tour overlay if tour.json exists in project root -->
        <action id="com.hackathon.actions.StartTourAction"
                class="com.hackathon.actions.StartTourAction"
                text="Start Tour"
                description="Start an immersive tour overlay if tour.json exists">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <!-- End Tour -->
        <action id="com.hackathon.actions.EndTourAction"
                class="com.hackathon.actions.EndTourAction"
                text="End Tour"
                description="End the current tour">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <!-- Generate Javadoc for toured elements -->
        <action id="com.hackathon.actions.GenerateJavadocForTourAction"
                class="com.hackathon.actions.GenerateJavadocForTourAction"
                text="Generate Javadoc for Tour"
                description="Insert/Update Javadoc for all classes/methods included in current tour">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
